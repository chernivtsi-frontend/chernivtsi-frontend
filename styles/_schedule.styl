
section#schedule table
  overflow: hidden
  width: 80% !important

section#schedule table tr:last-child
  border-bottom: $table-border

section#schedule table tr td:first-child
  border-left: $table-border

section#schedule table tr td
  border-top: $table-border
  border-right: @border-top

section#schedule table tr td:nth-of-type(1),
section#schedule table tr td:nth-of-type(2),
section#schedule table tr td:nth-of-type(5)
  text-align: center

section#schedule table tr td:nth-of-type(4)
  font-weight: 700

section#schedule table tr td[colspan='3'],
section#schedule table tr:first-child
  font-weight: 700

section#schedule table tr:first-child
  background-color: #efefef

section#schedule table tr td
  padding: 10px
