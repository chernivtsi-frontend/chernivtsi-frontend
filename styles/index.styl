@import _variables
@import _base
@import _misc
@import _schedule
@import _slideshow

.header
  background-image: url('../images/banner-bg.jpg')
  background-position: center
  background-size: cover
  display: flex
  height: 100vh
  justify-content: center
  position: relative
  &-wrapper
    align-items: center
    display: flex
    flex-direction: column
    justify-content: center
    position: relative
  &-title
    align-items: center
    display: flex
    div
      padding-left: 40px
      text-shadow: 0 0 20px rgba(0, 0, 0, .5)
      > h1
        color: white
        font-size: 80px
        font-weight: 700
      > p.desc
        color: white
        font-size: 35px
  &-logo
    border-radius: 5px
    box-shadow: $button-shadow
    display: inline-block
    float: left
    height: @width
    width: 10em
  .scroll
    animation: move-icon-scroll
    animation-delay: 3s
    animation-duration: 1s
    animation-iteration-count: infinite
    bottom: 20px
    position: absolute
    & img
      width: 50px

.speakers
  background-color: white
  .speaker
    align-items: center
    color: $js-black
    display: flex
    flex-direction: column
    justify-content: center
    margin-bottom: 40px
    width: 30%
    .photo
      align-items: center
      display: flex
      height: @width
      justify-content: center
      margin-bottom: 1rem
      position: relative
      width: 150px
      & > img
        border-radius: 50%
        height: 150px
        min-height: @height
      &.is-lightning::after
        background-color: $js-yellow
        border-radius: 3px
        bottom: -.5rem
        color: $js-black
        content: 'Lightning'
        font-weight: bold
        padding: .5rem
        position: absolute
        right: -1rem
        z-index: 10
    .name-speaker
      font-weight: 700
    .work-place
      font-style: italic
    .title-speach
      font-size: 1.2em
      font-weight: 700
      padding: 0 5%
      text-align: center

.partners
  background-color: white
  .container
    align-items: center
  .partner
    margin: 25px
    position: relative
    width: 15%
    & img
      width: 100%

.venue
  background: linear-gradient(rgba(0, 0, 0, .6), rgba(0, 0, 0, .6))
  color: white
  position: relative
  .title
    color: white
    &::after
      background-color: white
  .container
    padding: 0
  &-name.row
    line-height: 1.2
    text-align: center
    width: 100%
    & h2
      font-size: 2.3rem
      font-weight: lighter
    p
      color: white
      font-size: 1.6rem
      font-weight: lighter
  &-about.row
    align-items: center
    display: flex
    padding-bottom: 40px
  &-half
    color: white
    width: 50%
    &.logos
      display: flex
      justify-content: center
      text-align: center
      .unesco,
      .welterbe
        padding: 0 5%
        width: 30%
    &.desc p, a
      color: white
      font-size: 1.6rem
      font-weight: lighter
      text-align: left
    &.desc a
      font-weight: bold

.map
  margin: 0 auto
  padding-bottom: 0
  width: 100%
  #embedded-map
    height: 600px
  .address
    color: $js-black
    padding-bottom: 20px
    text-align: center

.bottom-banner
  align-items: center
  background-image: url('../images/bottom-banner-bg.jpg')
  background-position: center
  background-size: cover
  display: flex
  flex-direction: column
  height: 400px
  justify-content: center

.footer
  align-items: center
  background-color: $js-black
  display: flex
  justify-content: space-between
  padding: 40px 100px
  position: relative
