// Entry point of styles

// Import parts
@import _variables
@import _base
@import _misc
@import _slideshow

// --- --- ---

.navigation
  display: flex
  align-items: center
  height: 60px
  padding: 0 30px
  ul
    display: flex
    list-style-type: none
    li
      margin-right: 2rem
      a
        font-size: 20px
        color: rgba(white, 0.6)
        text-decoration: none
        &:hover
          color: white

.header
  background-image: url('/images/banner-bg.jpg')
  background-position: center
  background-size: cover
  height: 100vh
  position: relative
  &.page 
    height: auto
    padding-bottom: 3rem
  &-wrapper
    align-items: center
    display: flex
    flex-direction: column
    justify-content: center
    position: relative
    height: calc(100% - 60px)
  &-title
    align-items: center
    display: flex
    div
      padding-left: 40px
      text-shadow: 0 0 20px rgba(0, 0, 0, .5)
      h1
        color: white
        font-size: 80px
        font-weight: 700
      p.desc
        color: white
        font-size: 35px
  &-logo
    border-radius: 5px
    box-shadow: $button-shadow
    display: inline-block
    float: left
    height: @width
    width: 10em
  .scroll
    animation: move-icon-scroll
    animation-delay: 3s
    animation-duration: 1s
    animation-iteration-count: infinite
    bottom: 20px
    left: 50%
    transform: translateX(-50%)
    position: absolute
    img
      width: 50px

// --- --- ---

section.content
  font-weight: 300
  text-align: left

  h1, h2, h3, h4
    line-height 1.2
    margin-top: 3rem
    margin-bottom: 1rem

  h1:not(.title)
    margin-top 0
    font-size 2.074rem

  h2
    font-size: 1.728rem

  h3
    font-size: 1.44em;

  h4
    font-size: 1.2rem;

  small
    font-size small-font-size

  p
    margin-bottom: 1.3rem 

  code
    // font-size .9rem
    padding .2rem .5rem
    background #eee
    border-radius 3px

  pre
    background #eee
    padding 1em
    overflow-y auto
    border-radius 3px

  img
    display block
    max-width 100%
    margin 0 auto
    border-radius 3px

  blockquote
    margin 0
    padding-left 1rem
    border-left 3px solid #eee

// --- --- ---

.speakers
  font-weight: 300
  background-color: white
  text-align: center
  .speaker
    align-items: center
    color: $js-black
    display: flex
    flex-direction: column
    justify-content: center
    margin-bottom: 40px
    width: 30%
    .photo
      align-items: center
      display: flex
      justify-content: center
      margin-bottom: 1rem
      position: relative
      width: 150px
      img
        border-radius: 50%
        width: 100%
        height: auto
        min-height: 150px
        min-width: 150px
        object-fit: cover
      &.is-lightning::after
        background-color: $js-yellow
        border-radius: 3px
        bottom: -.5rem
        color: $js-black
        content: 'Lightning'
        font-weight: bold
        padding: .5rem
        position: absolute
        right: -1rem
        z-index: 10
    .name-speaker
      font-weight: 700
    .work-place
      font-style: italic
    .title-speach
      font-size: 1.2em
      font-weight: 700
      padding: 0 5%
      text-align: center

// --- --- ---

section.schedule
  background: #fff
.schedule-container
  width: 100%
  max-width: 600px
  margin: 0 auto
  position: relative
.schedule-time
  display: inline-block
  vertical-align: middle
  width: 120px
  font-weight: normal
  font-size: 14px
.schedule-desc
  display: inline-block
  vertical-align: middle
  font-weight: normal
  font-size: 14px
  position: relative
  max-width: 480px
  &:before
    content: ''
    display: block
    width: 7px
    height: 7px
    border: 2px solid $js-yellow
    background: $js-yellow
    border-radius: 50%
    top: 50%
    left: -20px
    position: absolute
    margin: -6px 0 0 0
.schedule-item
  margin: 3% 0
  font-size: 0
.schedule-item.is-tech
  .schedule-title
    font-weight: bold
.schedule-container
  &:before
    content: ''
    position: absolute
    width: 1px
    height: 103%
    background: #000
    top: -2%
    left: 105px
.schedule-theme
  font-family: Arial, sans-serif

// --- --- ---

.partners
  font-weight: 300
  background-color: darken(white, 2.5%)
  text-align: center
  .container
    display: block
  p
    display: block
  &-kind
    text-transform: capitalize
  &-wrapper
    display: flex
    justify-content: center
    align-items: center
    flex-flow: row wrap
  .partner
    display: flex
    padding: 2%
    box-sizing: border-box
    width: 20%
    align-items: center
    text-align: center
    a
      margin: 0 auto
    img
      width: 100%
    &#epam
      margin-top: 1%
    &#uvca  
      padding: 2% 0
    &#alterego
      padding: 2% 0  
      width: 25%
      margin: 0
    &#alterego img
      width: 95%
        
    &#asd-team img
      width: 60%
    &#chernivtsi-national-university img
      height: auto
      width: 80%
    &#cbit img,
    &#nodeschool-chernivtsi img
      height: 130px
      width: auto
    &#department-of-computer-technology img
      height: auto
      width: 70%
    &#templatemonster
      padding-left: 0  
      padding-right: 0  
      width: 28%
    &#templatemonster img
      height: auto
      width: 100%
// --- --- ---

.venue
  background: linear-gradient(rgba(0, 0, 0, .6), rgba(0, 0, 0, .6))
  color: white
  position: relative
  .title
    color: white
    &::after
      background-color: white
  .container
    padding: 0
  &-name.row
    line-height: 1.2
    text-align: center
    width: 100%
    & h2
      font-size: 2.3rem
      font-weight: lighter
    p
      color: white
      font-size: 1.6rem
      font-weight: lighter
  &-about.row
    align-items: center
    display: flex
    padding-bottom: 40px
  &-half
    color: white
    width: 50%
    &.logos
      display: flex
      justify-content: center
      text-align: center
      .unesco,
      .welterbe
        padding: 0 5%
        width: 30%
        object-fit: contain
    &.desc p, a
      color: white
      font-size: 1.6rem
      font-weight: lighter
      text-align: left
    &.desc a
      font-weight: bold

// --- --- ---

.last-year
  #video-container
    position: relative
    width: 100%
    height: 0
    padding-bottom: 56.25%
    margin: 0 1rem 4rem
    .video
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
  #tweets-container
    display: flex
    overflow: hidden
    flex-wrap: wrap
    justify-content: center
    .twitter-tweet
      margin: 0 1rem
      width: 30% !important
      min-width: 300px !important

// --- --- ---

.map
  margin: 0 auto
  padding-bottom: 0
  width: 100%
  #embedded-map
    height: 600px
  .address
    color: $js-black
    padding-bottom: 20px
    text-align: center

